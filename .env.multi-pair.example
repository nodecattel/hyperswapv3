# HyperSwap V3 Multi-Pair Grid Trading Bot Configuration
# Copy this to .env and customize for your setup

# =============================================================================
# MULTI-PAIR TRADING CONFIGURATION
# =============================================================================

# Enable multi-pair trading (set to 'true' to activate)
MULTI_PAIR_ENABLED=true

# Total investment across all pairs (USD)
MULTI_PAIR_TOTAL_INVESTMENT=500

# Maximum concurrent trading pairs
MULTI_PAIR_MAX_CONCURRENT=2

# Monitoring interval for all pairs (milliseconds)
MULTI_PAIR_CHECK_INTERVAL=5000

# =============================================================================
# TRADING PAIR 1: WHYPE/UBTC (Primary Pair)
# =============================================================================

# Enable WHYPE/UBTC trading
PAIR_WHYPE_UBTC_ENABLED=true

# Pool configuration
PAIR_WHYPE_UBTC_POOL=0x3a36b04bcc1d5e2e303981ef643d2668e00b43e7
PAIR_WHYPE_UBTC_FEE=3000  # 0.3% fee tier

# Grid configuration
PAIR_WHYPE_UBTC_GRIDS=15
PAIR_WHYPE_UBTC_INVESTMENT=300  # $300 (60% of total)
PAIR_WHYPE_UBTC_MARGIN=0.04     # 4% profit margin
PAIR_WHYPE_UBTC_RANGE=0.05      # ±5% price range
PAIR_WHYPE_UBTC_ADAPTIVE=true   # Enable dynamic range updates

# Risk management
PAIR_WHYPE_UBTC_MAX_POSITION=0.15      # 15% max position size
PAIR_WHYPE_UBTC_STOP_LOSS=false        # Disable stop loss for grid strategy
PAIR_WHYPE_UBTC_STOP_LOSS_PCT=0.1      # 10% stop loss if enabled

# =============================================================================
# TRADING PAIR 2: HYPE/USDT0 (Secondary Pair)
# =============================================================================

# Enable HYPE/USDT0 trading
PAIR_HYPE_USDT0_ENABLED=true

# Pool configuration (verified HyperSwap V3 pool)
PAIR_HYPE_USDT0_POOL=0x337b56d87a6185cd46af3ac2cdf03cbc37070c30
PAIR_HYPE_USDT0_FEE=500   # 0.05% fee tier (lower fees)

# Grid configuration
PAIR_HYPE_USDT0_GRIDS=15
PAIR_HYPE_USDT0_INVESTMENT=200  # $200 (40% of total)
PAIR_HYPE_USDT0_MARGIN=0.035    # 3.5% profit margin (lower due to lower fees)
PAIR_HYPE_USDT0_RANGE=0.05      # ±5% price range
PAIR_HYPE_USDT0_ADAPTIVE=true   # Enable dynamic range updates

# Risk management
PAIR_HYPE_USDT0_MAX_POSITION=0.15      # 15% max position size
PAIR_HYPE_USDT0_STOP_LOSS=false        # Disable stop loss for grid strategy
PAIR_HYPE_USDT0_STOP_LOSS_PCT=0.1      # 10% stop loss if enabled

# =============================================================================
# LEGACY SINGLE-PAIR CONFIGURATION (Fallback)
# =============================================================================

# These are used when MULTI_PAIR_ENABLED=false or as fallbacks
GRID_TRADING_ENABLED=true
GRID_TOTAL_INVESTMENT=500
GRID_COUNT=30
GRID_PROFIT_MARGIN=0.04
GRID_PRICE_RANGE_PERCENT=0.05
GRID_ADAPTIVE_RANGE=true

# Base trading pair (legacy)
BASE_TOKEN=WHYPE
QUOTE_TOKEN=UBTC
POOL_ADDRESS=0x3a36b04bcc1d5e2e303981ef643d2668e00b43e7
POOL_FEE=3000

# =============================================================================
# TOKEN ADDRESSES (HyperEVM Verified)
# =============================================================================

# Native and wrapped tokens
HYPE_ADDRESS=0x0000000000000000000000000000000000000000  # Native HYPE
WHYPE_ADDRESS=0x5555555555555555555555555555555555555555  # Wrapped HYPE

# Stablecoins and other tokens
USDT0_ADDRESS=0xB8CE59FC3717ada4C02eaDF9682A9e934F625ebb   # Tether USD
UBTC_ADDRESS=0x9fdbda0a5e284c32744d2f17ee5c74b284993463    # Wrapped Bitcoin
USDHL_ADDRESS=0xb50A96253aBDF803D85efcDce07Ad8becBc52BD5   # USD HyperLiquid
UETH_ADDRESS=0xbe6727b535545c67d5caa73dea54865b92cf7907    # Wrapped Ethereum

# =============================================================================
# SAFETY CONFIGURATION
# =============================================================================

# IMPORTANT: Keep DRY_RUN=true for testing!
DRY_RUN=true

# Risk limits
MAX_DAILY_LOSS_USD=50
ENABLE_STOP_LOSS=false
STOP_LOSS_PERCENTAGE=0.1

# Slippage tolerance
GRID_SLIPPAGE_TOLERANCE=0.01  # 1%

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# HyperEVM network settings
NETWORK_NAME=hyperevm
CHAIN_ID=998
RPC_URL=https://api.hyperliquid-testnet.xyz/evm

# Your wallet configuration
PRIVATE_KEY=your_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# =============================================================================
# CONTRACT ADDRESSES (HyperSwap V3)
# =============================================================================

QUOTER_V2_ADDRESS=0x1234567890123456789012345678901234567890
SWAP_ROUTER_ADDRESS=0x1234567890123456789012345678901234567890
FACTORY_ADDRESS=0x1234567890123456789012345678901234567890

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

LOG_LEVEL=info
ENABLE_DASHBOARD=true
DASHBOARD_PORT=3000

# WebSocket configuration
WS_ENABLED=true
WS_URL=wss://api.hyperliquid.xyz/ws

